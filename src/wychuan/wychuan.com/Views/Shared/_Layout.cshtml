            </div>
        </nav>
        
        <div class="container">
            @RenderBody()
        </div>
        
        <script src="~/scripts/jquery-1.11.2.min.js"></script>
        <script src="~/scripts/bootstrap.min.js"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>
