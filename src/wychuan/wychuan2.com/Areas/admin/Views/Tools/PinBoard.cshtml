@model List<AC.Service.DTO.Tools.MyNotesDTO>
@{
    ViewBag.Title = "记事本";
    Layout = "../Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/Content/plugins/datapicker/datepicker3.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox-content">
            <form class="form-inline">
                <div class="form-group">
                    <label class="control-label">创建时间：</label>
                    <div class="input-daterange input-group" id="datepicker">
                        <input type="text" id="starttime" class="input-sm form-control" name="start" value="@DateTime.Now.AddDays(-7).ToString("yyyy-MM-dd")" />
                        <span class="input-group-addon">to</span>
                        <input type="text" id="overtime" class="input-sm form-control" name="end" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span class="input-group-btn">
                            <button type="button" id="btnQuery" class="btn btn-primary btn-sm "><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>

                <a class="btn btn-primary pull-right" type="button" data-toggle="modal" href="#mynotesModal"><i class="fa fa-check"></i>&nbsp;新增</a>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div id="mynotesContainer">
            @Html.Partial("_PinBoardList", Model)
        </div>
    </div>
</div>

<!--账户对话框-->
<div class="modal fade" id="mynotesModal" tabindex="-1" role="dialog" aria-labelledby="myNotesModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myNotesModalLabel">记事本</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="frmTimeline">
                    <input type="hidden" value="0" id="Id" />
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="Title">事件主题</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Title" name="Title" placeholder="事件主题" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="Content">事件内容</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3" id="Content" placeholder="请输入事件内容"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" id="btnSave" class="btn btn-primary">保存</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/plugins/datapicker/bootstrap-datepicker.js"> </script>
    <script src="~/Scripts/tools/mynotes.js"></script>
}